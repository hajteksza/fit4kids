{% trans_default_domain 'FOSUserBundle' %}
{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}">
{% endblock %}

{% block body %}
        <div class="fos_user_user_show" style="margin-left:30px; margin-right: 30px">
            <h3 class="userInfo">Informacje o użytkowniku: </h3>
            <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
            <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
            <p>Stan punktów: {{ user.points }}</p>
            <div style="margin-top: 10px">
            </div>

            <div class="title"">
            </div>

            <div class="title">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#home">Koszyk</a></li>
                    <li><a data-toggle="tab" href="#menu1">Zmień hasło</a></li>
                    <li><a data-toggle="tab" href="#menu2">Edytuj dane</a></li>
                    <li><a data-toggle="tab" href="#menu3">Dodaj punkty</a></li>
                    <li><a data-toggle="tab" href="#menu4">Twoje Kursy</a></li>
                </ul>
            </div>


            <div class="tab-content menu">
                <div id="home" class="tab-pane fade in active" class="menu">
                    {{ render(controller(
                    'AppBundle:Basket:show'
                    )) }}
                </div>
                <div id="menu1" class="tab-pane fade">
                    {{ render(controller(
                    'FOSUserBundle:ChangePassword:changePassword'
                    )) }}
                </div>
                <div id="menu2" class="tab-pane fade">
                    {{ render(controller(
                    'FOSUserBundle:Profile:edit'
                    )) }}
                </div>
                <div id="menu3" class="tab-pane fade">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-8">
                            <span class="pointAdder"><a href="/addPoints/10"
                                                                class="btn btn-primary">Dodaj 10 punktów</a></span>
                                <span class="pointAdder"><a href="/addPoints/50"
                                                                    class="btn btn-primary">Dodaj 50 punktów</a></span>
                                <span class="pointAdder"><a href="/addPoints/100"
                                                                    class="btn btn-primary">Dodaj 100 punktów</a></span>
                                <span class="pointAdder"><a href="/addPoints/200"
                                                                    class="btn btn-primary">Dodaj 200 punktów</a></span>
                            </div>
                            <div class="col-md-2">
                            </div>
                        </div>
                    </div>
                </div>
                <div id="menu4" class="tab-pane fade">
                    {{ render(controller(
                    'AppBundle:Course:myCourses'
                    )) }}
                </div>
            </div>
        </div>
{% endblock %}