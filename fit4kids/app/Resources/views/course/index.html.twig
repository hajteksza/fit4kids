{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <h3 class="title">Lista Kurs√≥w: </h3>
                <div class="mainTableDiv">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>Nazwa kursu</th>
                            <th>Opis</th>
                            <th>Cena</th>
                            <th>Polubienia</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for course in courses %}
                            <tr>
                                <td>{{ course.title }}</td>
                                <td>{{ course.description }}</td>
                                <td>{{ course.price }}</td>

                                <td>
                                    <span>{{ course.likes }}</span>
                                    <a href="/course/like" class="likeLink" data-id="{{course.id}}">
                                        <img src="/Assets/images/heart.png" alt="polub" height="25" width="25">
                                    </a>
                                </td>
                                <td> 
                                       {%if course.addedByLoggedUser == 'true'%}
                                            <a class="btn btn-info disabled" href="#">Zakupiony</a>
                                       {%endif%}
                                       {%if course.addedByLoggedUser == 'false'%}
                                            <a class="btn btn-default" href="addToBasket/{{ course.id }}">Dodaj do koszyka</a>
                                       {%endif%}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>

{% endblock %}

{%block javascripts %}
    <script src="{{asset("bundles/app/js/showCourses.js")}}"></script>
{%endblock%}